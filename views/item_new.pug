extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='item_name') Item name:
      input#item_name.form-control(type='text', placeholder='Insert item name here' name='name' required value=(undefined===item ? '' : item.name) )
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text', placeholder='Item description' name='description' required value=(undefined===item ? '' : item.description) )
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='text', placeholder='Item price' name='price' required value=(undefined===item ? '' : item.price) )
    div.form-group
      label(for='inStock') Current stock:
      input#inStock.form-control(type='text', placeholder='Item inStock' name='inStock' required value=(undefined===item ? '' : item.inStock) )
    div.form-group
    label For pet type:
    div
      for pet in pets
        div(style='display: inline; padding-right:10px;')
          input.checkbox-input(type='checkbox', name='for', id=pet._id, value=pet._id, checked=pet.checked)
          label(for=pet._id) &nbsp;#{pet.name}
    div.form-group
    label Food category:
    div
      for category in categories
        div(style='display: inline; padding-right:10px;')
          input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked)
          label(for=category._id) &nbsp;#{category.name}
    button.btn.btn-primary(type='submit') Submit


  if errors
    ul
      for error in errors
        li!= error.msg
